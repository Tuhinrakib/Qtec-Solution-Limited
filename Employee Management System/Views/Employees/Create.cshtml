@model Employee_Management_System.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4">Create Employee</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Phone" class="form-label fw-bold"></label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Position" class="form-label fw-bold"></label>
                    <input asp-for="Position" class="form-control" placeholder="Enter position" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="JoinDate" class="form-label fw-bold"></label>
                    <input asp-for="JoinDate" type="date" class="form-control" />
                    <span asp-validation-for="JoinDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="form-label fw-bold"></label>
                    <select asp-for="Status" class="form-select">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Department" class="form-label fw-bold"></label>
                    <select asp-for="DepartmentID" class="form-select" asp-items="ViewBag.DepartmentID">
                        <option disabled selected>Select department</option>
                    </select>
                </div>

                <div class="form-group mb-3 text-center">
                    <input type="submit" value="Create" class="btn btn-primary px-4" />
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-link">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}